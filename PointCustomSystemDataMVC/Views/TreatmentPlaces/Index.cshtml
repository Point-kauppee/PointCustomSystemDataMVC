@model IEnumerable<PointCustomSystemDataMVC.ViewModels.TreatmentPlaceViewModel>

@{
    ViewBag.Title = "Index";
}
<title>PointCollege Ajanvarausohjelmisto</title>
<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/lib/w3.css">
<script src="/lib/w3.js"></script>

<script src="~/Scripts/modernizr-2.8.3.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="/Scripts/bootstrap.js"></script>
<script src="/Scripts/respond.js"></script>

<!-- !SIDEMENU CONTENT! -->
@{ Html.RenderAction("SideMenu", "Customers");}

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:250px">

    <!-- Push down content on small screens -->
    <div class="w3-hide-large" style="margin-top:83px"></div>

    <!-- Container -->
    <div class="w3-container">

        <h2>Palvelupaikkahallinta</h2>

        <p>
            @Html.ActionLink("Luo uusi hoitopaikkatieto", "Create")
        </p>
        <p><a href="/TreatmentPlaces/Create" class="w3-btn w3-small">Uusi palvelupaikka</a></p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TreatmentPlaceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TreatmentPlaceNumber)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TreatmentPlaceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TreatmentPlaceNumber)
                    </td>
                    <td>
                        @Html.ActionLink("Muokkaa", "Edit", new { id = item.TreatmentPlace_id }) |
                        @Html.ActionLink("Poista", "Delete", new { id = item.TreatmentPlace_id })
                    </td>
                </tr>
            }

        </table>
    </div><!-- End content -->
</div><!-- End page content -->