</style>
   
<title>Palveluraportin tallennus</title>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

  

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Palveluraportti</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Reservation_id)

            <div class="form-group">
                @Html.LabelFor(model => model.FullNameA, "Asiakas", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-20" >
                    @Html.EditorFor(model => model.FullNameA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FullNameA, "", new { @class = "text-danger" })
                </div>
            </div>
      

            <div class="form-group">
                @Html.LabelFor(model => model.TreatmentReportTexts, "Palveluraportti", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-20">
                    @Html.TextAreaFor(m => m.TreatmentReportTexts, new { @class = "form-control", rows=50, columns=150 }) 
                    @*@Html.EditorFor(model => model.TreatmentReportTexts, new { htmlAttributes = new { @class = "form-control height:500px" } })*@
                    @Html.ValidationMessageFor(model => model.TreatmentReportTexts, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tallenna" class="btn btn-default" />
                </div>
            </div>  
      }
    
    <div>
        @Html.ActionLink("Takaisin palveluvaraukseen", "Index")
    </div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
